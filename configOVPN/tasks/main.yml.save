---

- name: Update apt packages
  apt:
   only_upgrade: yes

- name: Install OVPN
  raw: apt-get install -y  openvpn easy-rsa       
            

- name: make-cadir
  shell: make-cadir  ~/openvpn-ca
  ignore_errors: yes



- name: Template vars
  template: src=vars.j2 dest=~/openvpn-ca/vars mode=0644

- name: cd owpn
  shell: "{{ item }}"
  loop: 
      - cd ~/openvpn-ca
      - .  ~/openvpn-ca/vars  
      




- name: Clean All
  shell: . ~/openvpn-ca/vars && ./clean-all 
  register: res
  failed_when: res.rc!=127        


